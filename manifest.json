{
  "manifest_version": 2,

  "name": "One Choice!",
  "description": "One choice optimized for all cases.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Once Choice!"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "http://*/*", 
    "https://*/*"
  ]
}